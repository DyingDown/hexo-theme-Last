extends includes/layout.pug

block content
  if page.title === 'tags'
    #category
      - var categoriesList = list_categories({ show_count: false })
      - var tagsList = list_tags({ show_count: false })
      #categories
        h1 Categories
        if categoriesList
          != list_categories({show_count: false, style: span, depth: 1})
        else
          p None.
      br
      #tags
        h1 Tags
        if tagsList
          != tagsList
        else
          p None.
      br
  if page.title === 'links'
    if page.links
      .links
        h2!= theme.friendPageNotice
        ol.rules
          each rule in theme.exchangeUrlRules
            li!= rule
        h3!= "The followings are my site imformation: "
        ul.mylink
          li!= "Site URL: " + theme.siteUrl
          li!= "Site Name: " + theme.siteName
          li!= "Avatar(URL): " + theme.Avatar
          li!= "Site Description: " + theme.siteDescription
        each group, index in page.links
          h2.link-title!= group.group_name
          .group-description!= group.description
          if group.items
            ul.group-items.clearfix
              each item in group.items
                  li.item-friend(title=item.description)
                    a.item-friend-links(href=item.url)
                      img.site-preview(src=item.img, alt=item.name)
                      .site-name!= item.name
                      .site-description!= item.description
        include includes/comment.pug
  else if page.title === "project"
    if page.projects
      .projects
        .projects-header
          h1!= "Study Projects"
        ul
          li
            i.fa.fa-circle
            span!= "All projects in this page is not original"
          li
            i.fa.fa-circle
            span!= "But all projects are written by blogger"
          li
            i.fa.fa-circle
            span!= "Click the title to jumpt to the certain original link"
        .projects-container-outer
          .project-container
            each item, index in page.projects
              .box(onclick="javascript:window.location.href='#{item.origin}''")
                .content
                  h2!= ("000" + String(index)).substr(-2)
                  a.title(href=item.origin ,target="_blank")!= item.title
                  p!= item.description
                  a.readmore(href=item.url)!= "Preview"
        .comment
          include includes/comment.pug
  else if page.title === "about"
    .aboutMePage
      center
        img.aboutMeAvatar(src=theme.avatar)
      h1!= "Who I'm I?"
      p.seff-introduction-formal!= theme.selfIntroductionFormal
      ul.location
        li
          i.fas.fa-map-marker-alt
          span.aboutWords!= theme.Location
        li
          i.fas.fa-arrow-circle-right
          span.aboutWords!= theme.Position
      h2!= "My Experiences"
      ul.myProjects
        each project in theme.Projects
          li.project
            i.fas.fa-circle-notch
            span.projectWords!= project
      h2!= "My GitHub Contributions"
      - var GitHubName = theme.GitHubUserName
      - var charUrl = ' "https://ghchart.rshah.org/' + GitHubName + '" ';
      //- img.github-contribution(src="https://ghchart.rshah.org/DyingDown")
      include includes/third-party/calendar.html
      h2!= "My abbilities"
      ul.myAbilities
        each ability in theme.Abilities
          li
            i.fas.fa-leaf
            span.abilityWords!= ability
      include includes/comment.pug
  else if page.title == "top"
    div#post-rank
    h1!= "sss"
    h1!= "sss"
    h1!= "sss"
  else if page.title === "novel"
    .novel
      .left-intro
        h2!= "阅读指南"
        ul
          li!= "点击书的封皮，打开对应的书"
          li!= "← →键翻页"
