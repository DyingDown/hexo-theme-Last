.recommend
    padding-bottom .3em
    font-size 1.75em
    line-height 1.225
    border-bottom 1px solid #eee
.popular-posts-item img
    width: 100%;
    border-radius: 10px 10px 0 0;
    -webkit-filter: grayscale(50%);
    filter: grayscale(50%);

.popular-posts-item
    border-radius 10px;
    float left
    height 480px
    // font-family $fonts
    // border green 2px solid;
    flex: 1 0 18.75em
    margin: 0 0 1.875rem 
    display: inline-block
    min-height: 285px
    transition: all 0.3s
    position: relative
    z-index: 0
    font-family: "Lato"
    @media(min-width: 37.5rem)
        margin: 0 0.9375em 15px
    // Note 1: This complex calc right here is what makes the leftover box items
    // have the same width than their siblings.
    for $n in 2..3
        $resolution = "calc((2 * %s) + (%s * %s))"%(0.625em $n 18.75em)
        @media(min-width: $resolution)
            max-width: "calc(%s/%s - %s*2)"%(100% $n 0.9375em)
    // Note 2: This sets the maximum number of box items per row.
    @media(min-width: "calc(2 * %s + %s * $s)"%(0.625em 3 18.75em))
        flex: 1 0 "calc(100%/%s - %s*2)"%(3 0.9375em)
    // background-color: #f4f4f4
    -webkit-box-shadow: 1px 0 5px rgba(0,0,0,0.4);
    box-shadow: 1px 0 5px rgba(0,0,0,0.4);
.popular-posts
    padding-inline-start: 0px;
    // float: left;

.popular-posts-title,
.popular-posts-excerpt
    margin: 0 15px;
.popular-posts-excerpt
    line-height: 24px;
.popular-posts-excerpt code
    background-color: #eee;
    padding: 0 5px;
    color: black;
    // border: 0.5px solid darkgray;
.popular-posts-title a
    color: #111 !important
    text-decoration: none;
    font-size: 22px;
.popular-posts-title:hover
        text-decoration: underline !important;