// li p.first
//     display inline-block

.post-content ul,
.post-content ol
    // padding-left 30px
    line-height: 35px
.post-content ol
    counter-reset: li
    list-style none
    // list-style: decimal
    display: block;
    // list-style-type: decimal;
    margin-block-start: 1em;
    margin-block-end: 0em;
    margin-inline-start: 1px;
    margin-inline-end: 0px;
    padding-inline-start: 40px;

.post-content ol li::before
    height 20px
    width 20px
    content: counter(li)
    counter-increment: li
    font-size: 0.875em
    text-align: center
    color white
    white-space: nowrap
    position: absolute; 
    left: 3.8em; 
    line-height: 1.4em;
    // top: 2px; 
    // border solid #d31a29 1px
    margin-top: 0.5em;
    background: #d31a29
    border-radius: 40px;
    // padding-right 5px
    // padding-left: 5px
.post-content ol ol li:before
    margin-left 30px

.post-content ul
//     counter-reset: li
    list-style: none
    // list-style circle
.post-content ul li:nth-of-type(n)::before
    content ""
    color white
    font-weight: 20px
    position: absolute; 
    left: 3.5em; 
    line-height: 2em;
    // top: 2px; 
    margin-top: 0.7em;
    background: white
    border-radius: 30px;
    // padding-right 5px
    // padding-left: 5px
    border solid 3.5px #d31a29
    height 7px
    width 7px
.post-content ul li:before,
.post-content ol li:before
