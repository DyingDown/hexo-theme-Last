@import "variable/variable.styl"

.article
    background-color $post-background-color
    margin-top 110px
    position relative
    margin-left 14%
    margin-right 1%
    width 57%
    @media(max-width 1600px)
        width 61%
        margin-left 10%
    @media(max-width 1300px)
        margin-left: 0px
        margin-right: 0px
        width 100%
#post
    -webkit-box-shadow 1px 0 5px rgba(0,0,0,.4)
    box-shadow 1px 0 5px rgba(0,0,0,.4)
    // padding-right: 40px
    // padding-top: 5px
    // line-height: 1.6
    // float left
    // height auto
.post-content
    padding-top: 20px
    padding-bottom 40px
    padding-right: 40px
    padding-left: 40px
.post-information
    // background-color $post-background-color
    // margin-top 110px
    // position relative
    // margin-left 14%
    // margin-right 1%
    // width 57%

.titles
    padding-left 20px
    border-left solid 0.3125rem $post-title-border-left-color
    padding-bottom: 0.3125rem
    &:hover
        border-color: $post-title-hover-border-left-color

.title
    padding-top: 0.9375rem
    border-bottom: 0px
    margin-bottom: 0.8rem 
    font-weight: 900

.date
    float: right
    margin-right: 20px
    position relative
    margin-top: -30px
.category
.post-tag
    &:hover
        color $post-tag-hover-text-color
.words
    margin-left: 0.5rem
    // padding-right: 0.5rem
    text-decoration: none
    font-size: 0.9375rem
    &:link
        color black
.post-title-icons
    margin-left 0.5rem
.side-bar
    background-color: $post-side-bar-background-color
    border-top solid $post-side-bar-border-top-color 2px
    // margin-top: 100px
    float right
    margin-right: 8%
    position relative
    // -webkit-box-shadow: 1px 0 5px rgba(0,0,0,.4);
    // box-shadow: 1px 0 5px rgba(0,0,0,.4);
    // padding-top 10px
    // padding-right 10px
    // padding-bottom: 10px
    width 18%
    height auto
    @media(max-width 1300px)
        display none
    @media(max-width 1600px)
        margin-right 8%
        
.post-content h1
    padding-bottom .3em
    font-size 2.25em
    line-height 1.2
    border-bottom 1px solid #eee
.post-content h2
    padding-bottom .3em
    font-size 1.75em
    line-height 1.225
    border-bottom 1px solid #eee

.post-content h3
    font-size 1.5em
    line-height 1.43

.post-content h4
    font-size 1.25em

.post-content h5
    font-size 1em

.post-content h6
   font-size 1em
    color #777

.post-content p,
.post-content blockquote,
// ul,
// ol,
// dl,
.post-content table
    margin 1rem 0
li>ol,
li>ul
    margin 0 0

.post-content hr
    height 2px
    padding 0
    margin 16px 0
    background-color #e7e7e7
    border 0 none
    overflow hidden
    box-sizing content-box


// li p.first
//     display inline-block

.post-content ul,
.post-content ol
    // padding-left 30px
    line-height: 35px
.post-content ol
    counter-reset: li
    list-style none
    // list-style: decimal
    display: block;
    // list-style-type: decimal;
    margin-block-start: 1em;
    margin-block-end: 0em;
    margin-inline-start: 1px;
    margin-inline-end: 0px;
    padding-inline-start: 40px;

.post-content ol li::before
    height 20px
    width 20px
    content: counter(li)
    counter-increment: li
    font-size: 0.875em
    text-align: center
    color white
    white-space: nowrap
    position: absolute; 
    left: 3.8em; 
    line-height: 1.4em;
    // top: 2px; 
    // border solid #d31a29 1px
    margin-top: 0.5em;
    background: #d31a29
    border-radius: 40px;
    // padding-right 5px
    // padding-left: 5px
.post-content ol ol li:before
    margin-left 30px

.post-content ul
//     counter-reset: li
    list-style: none
    // list-style circle
.post-content ul li:nth-of-type(n)::before
    content ""
    color white
    font-weight: 20px
    position: absolute; 
    left: 3.5em; 
    line-height: 2em;
    // top: 2px; 
    margin-top: 0.7em;
    background: white
    border-radius: 30px;
    // padding-right 5px
    // padding-left: 5px
    border solid 3.5px #d31a29
    height 7px
    width 7px
.post-content ul li:before,
.post-content ol li:before
