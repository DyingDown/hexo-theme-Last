.fixedFunction
    position: fixed
    right: 30px
    bottom: 23px
    z-index: 99999
@-webkit-keyframes fadeInUp 
    0%
        opacity:0;
        -webkit-transform:translateY(15px)
    100%
        opacity:1;
        -webkit-transform:translateY(0)
@-moz-keyframes fadeInUp 
    0%
        opacity:0;
        -moz-transform:translateY(15px)
    100% 
        opacity:1;
        -moz-transform:translateY(0)
.plus
    background-color: darkred
    margin 0 !important
    cursor pointer
    overflow hidden
.fixedFunction
    &:hover 
        color red
        #subFunction
            display block
            // -webkit-animation fadeInUp .3s .1s ease both;
            // -moz-animation fadeInUp .3s .1s ease both

            
.goTop
    background-color: darkblue
.goComment
    background-color: green
.goBottom
    background-color: orange
.functionButton
    font-size 2em
    // border-radius: 2em
    color white
    text-align: center
    line-height: 48px
    padding 0

#subFunction
    display: none
    list-style-type: none
    padding 0
    text-align: center
    line-height: 48px
    font-size: 1.8em
    margin-block-start: 15px
    margin-block-end: 15px
    -webkit-animation fadeInUp .5s .1s ease both;
    -moz-animation fadeInUp .5s .1s ease both
    
#subFunction a
    color white
