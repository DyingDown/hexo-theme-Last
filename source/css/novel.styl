.novel
    width: 80%;
    height: 80vh;
    // background-color green;
    margin: 100px auto 0;
    display flex;
    justify-content: space-between
.left-intro,
.right-bookshell
    width: 46%;
    height: 600px
    // background-color lightblue
    margin: 2%

.first-shell,
.second-shell
    width: 80%
    height: 235px;
    margin: 40px auto 20px
    background: url("/img/bookshell.png") center bottom no-repeat
    background-size: 100%;
    display: flex;
    justify-content space-evenly;
    align-items: flex-end
    // background-color pink;
.book-lost
.book-sick
    width: auto
    height: auto
    height: 58.2%
    margin-bottom: 60px
    width: 25%

.book-sick
    // background: url("/img/cover-sick.jpg") center bottom no-repeat
    // background-size: 100%;

.cover
    width: 100%
    margin auto auto
    -moz-box-shadow:1px 1px 6px #6E6E6E; 
    -webkit-box-shadow:1px 1px 6px #6E6E6E; 
    box-shadow:1px 1px 6px #6E6E6E;

.left-intro ul
    list-style: none
    line-height: 2em
.left-intro ul li:nth-of-type(n)::before
    content ""
    color white
    font-weight: 20px
    position: absolute; 
    margin-left: -2em; 
    line-height: 2em;
    // top: 2px; 
    margin-top: 0.8em;
    background: white
    border-radius: 30px;
    // padding-right 5px
    // padding-left: 5px
    border solid 3.5px #d31a29
    height 5px
    width 5px
.left-intro h2
    padding-bottom .3em
    font-size 2.25em
    line-height 1.2
    border-bottom 1px solid #eee

.left-intro h3
    font-size 1.5em
    line-height 1.43

.left-intro div
    margin 1rem 0
    font-size: 16px;