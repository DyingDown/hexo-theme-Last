@import "../themes/variable.styl"

#bottom-inner
    max-width: 750px
    clear both
    margin: auto
    color: $text-color
    font-weight: 5px
    margin-top: 50px
    border-top: 0.09px solid #323232 
    border-top-width: 0.1px
    padding: 20px 25px
    text-align:  center

.icon
    display: inline-block
    float left
    margin-right: 15px
    margin-top 15px
    font-size: 32px
    color: #808080
    &:hover
        color: $minorColor
#author
    clear both
    color: $footer-author-text-color
    padding-top: 140px
    font-size 18px
    line-height: 30px
    font-family $footer-author-text-font

#theme_author
    text-decoration: none
    color $footer-theme-author-text-color
    font-weight: bold
#theme_name
    font-weight: bold
    text-decoration: none
    color $footer-post-theme-author-text-color

.visits
    color $footer-visits-text-color
    font-family: $fonts
    clear both
    padding-bottom: 20px