.search-box {
    background: none;
    height: 25px;
    border-radius: 25px;
    padding: 10px;
    font-size: 25px;
    // width: 10.5vw;
}
.search-btn {
    color: white;
    float: right;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background: none;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: 0.4s;
    text-decoration: none;
}
#local-search-input {
    border: none;
    background: none;
    outline: none;
    float: left;
    padding: 0;
    color: white;
    font-size: 16px;
    transition: 0.4s;
    line-height: 25px;
    width: 0;
}
// #local-search-input::placeholder
