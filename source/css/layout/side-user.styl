@import "../variable/variable.styl"

.side-user    
    background-color: white
    // margin-top: 100px
    // float right
    // margin-right: 10%
    position relative
    -webkit-box-shadow: 1px 0 5px rgba(0,0,0,.4);
    box-shadow: 1px 0 5px rgba(0,0,0,.4);
    // padding-top 10px
    margin-right 10px
    // padding-left 10px
    // padding-bottom: 10px
    height auto
    width 100%
    min-height 200px
    @media(max-width 1300px)
        display none
    @media(max-width 1600px)
        margin-right 10%

.side-user .top-bar
    display flex
    justify-content: space-evenly
    // line-height: 40px
    border-bottom: solid $side-user-top-bar-border-bottom 1px
    align-items: center
    margin-left: 0px
    margin 0px !important
    padding 0px
    padding-bottom: 10px
    padding-top: 10px
    margin-block-start: 0
    margin-block-end: 0
    margin-inline-start: 0
    margin-inline-end: 0


#qrcode-triangle
// label
    display: inline-block
    display: block
    position: absolute;
    top: 40px;
    right: 0;
    width: 70px;
    height: 70px;
    background: url(/img/qrcode_icon.png) no-repeat 0 0;
    background-size: 70px 70px;
    z-index: 100;
    // background-color: blue
    // cursor: pointer

.top-bar li
    list-style-type none
    float: left;
    color $side-user-top-bar-text-color
//     // width: 139.5px;
//     text-align: center
    // margin-top: 12px
//     font-size: 14px
.avatar
    width 50%
    margin-top: 25px
    margin-left 25%
    margin-bottom: 10px
    // border solid rgb(250, 54, 54) 1px
    border-radius 90px
    background-color: $side-user-avatar-background-color

#side-author
    color $side-user-author-text-color
    font-size: 25px
    text-align: center
    padding-bottom: 20px

#author-description
    margin-left: 8%
    margin-right 8%
    color $side-user-author-description-text-color
    line-height: 25px
    font-size: 15px
    padding-bottom: 20px

#payment-codes
    display none
    position absolute
    top 40px
    background-color: rgba(0,0,0,0.8)
    z-index 2
    height auto

.qr-description
    color white
    font-size: 30px
    line-height: 40px
    margin-top: 35px
    text-align: center

#wechat
    margin-top: 20px
    margin-bottom: 10%
    width: 50%
    margin-left: 25%
#alipay
    margin-top: 20px
    margin-bottom: 40px
    width: 50%
    margin-left: 25%

.buttons
    display flex
    justify-content: space-around

#wechat-button,
#alipay-button
    text-align:center
    font-size:20px
    border-radius:6px
    color $side-user-button-color;
    line-height: 25px
    padding-left: 10px
    padding-right: 10px
    border solid 1px $side-user-button-color
    cursor pointer
    
#wechat-button
    color $side-user-untouched-button-color
    background-color: $side-user-button-color