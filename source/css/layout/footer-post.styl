@import "../variable/variable.styl"

#bottom-outer
    background-color: $footer-post-background-color
    
#bottom-inner
    max-width: 750px
    margin: auto
    color: $text-color
    font-weight: 5px
    margin-top: 50px
    border-top: 1px solid $footer-post-background-color-border-top 
    border-top-width: 0.1px
    padding: 20px 25px
    // border solid
    text-align:  center

.icon
    display: inline-block
    float left
    margin-right: 15px
    margin-top 15px
    // marigin auto
    font-size: 32px
    color: $footer-post-icon-color
    // background-color: white
    // filter drop-shadow 0px 10px red
    // border-right: solid rgba(250, 250, 250, 0.5)
    // filter: drop-shadow(0px 30px 0px rgb(red));
    // opacity: 1
    // background-image: url(/img/icon/alipay.svg), linear-gradient(#f00, #f00);
    // stroke 
    &:hover
        color: $footer-post-hover-icon-color


#author
    clear both
    color: $footer-post-author-text-color
    padding-top: 140px
    font-size 18px
    line-height: 30px
    font-family $footer-post-author-text-font

#theme_author
    text-decoration: none
    color $footer-post-theme-author-text-color
    font-weight: bold
#theme_name
    font-weight: bold

.visits
    color $footer-post-visits-text-color
    font-family: $footer-post-visits-text-font
    clear both
    padding-bottom: 20px