    color: white
    text-decoration: none
    margin-top: 100px
    margin-right: 25%
    margin-left: 25%
    @media(max-width 980px)
        margin-right: 5%
        margin-left: 5%
        .article-title
            font-size: 50px
        .article-content
            font-size 30px
        .article-time
