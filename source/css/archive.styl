    // width 80%

.archive-list-item:nth-child(2n-1)::before
    position absolute
    background-color :black
    border solid 4px #d31a29
    border-radius 20px
    margin-left: 26px
    // top 200px
    margin-top: 15px
    content ""
    width 13px
    height 13px
.archive-list-item:nth-child(2n)::before
    position absolute
    background-color :black
    border solid 4px #d31a29
    border-radius 20px
    margin-left: -47px
    // top 200px
    margin-top: 15px
    content ""
    width 13px
    height 13px
.archive-list-item:nth-child(2n)
    list-style-type none
    border-left solid #d31a29 3px
    // margin-left: 20%
    // width 50%
    // margin-left: 30%
    float left
    clear both
    padding-left 35px
    margin-left: 46.5%
    padding-bottom: 20px
    width 50%
    .article-time
        position relative
        left -115%
        margin-top -8%
        color #d31a29
        text-align: right
.archive-list-item:nth-child(2n-1)
    text-align: right
    list-style-type none
    clear both
    float right
    margin-right 53.1%
    border-right solid #d31a29 3px
    padding-right 35px
    width 50%
    padding-bottom: 20px
    .article-time
        color #d31a29
        text-align: left
        position relative
        left +115%
        margin-top -8%

