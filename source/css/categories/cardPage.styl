rem(designpx )
    $rem = 15px;
    return (designpx / $rem )rem
#home
    padding-top rem(130px) // 150
    max-height 9999px
    margin: 0 auto
@media (max-width: 1200px)
    #home
        padding-top: 90px;
.row
    center(rem(1030px)) // 1030
    max-width rem(1030px)
    width auto
    float none
    margin-right: auto
    margin-left: auto
    padding-left: 0
    padding-right: 0
// .row::before,
// .row::after
//     content ""
//     display table
.flex-grid
    display flex
    flex-flow row wrap

.title-category
    center(rem(1000px)) // 1000
    font-size rem(40px) // 40px
    margin-top 0
    text-transform uppercase
    padding 0 rem(15px) // 15px
.tags::before
    display: none
.box-item
    flex 1 0 300px // 300px
    margin 0 rem(15px) rem(15px) // 15 50
    display inline-block
    border 1px solid #eee
    border-radius 5px // 5
    min-height rem(285px) // 285px
    transition all .3s
    position relative
    cursor: pointer

    &:hover
        box-shadow 1px 2px 10px #eee // 10
    a
        text-decoration none
        &:hover
            .box-item
                box-shadow 10px 10px 10px #eee // 10
    .box-body
        padding rem(25px) // 25px
        time
            font-size rem(14px) // 14px
            color #b2bac2
        h2
            margin rem(5px) 0 rem(15px) // 5 15px
            font-size rem(20px) // 20px
            mainFont(800)
            color $main
            span
                color 
        p
            margin 0 0 rem(20px) // 20px
            color #576366
            font-size rem(14px) // 14px
            line-height rem(22px) // 22px
        .tags a
            // color $main
            padding 0.3215rem 0.625rem // 5px 10px
            border-radius 3px
            display inline-block
            margin 0 rem(5px) rem(5px)
            z-index 50
            // font-size 0.875rem // 14px

.ribbon
    position absolute
    right -5px 
    top -5px
    z-index 1
    overflow hidden
    width 75px 
    height 75px
    text-align right
    .ri 
        font-size rem(12px) // 12px
        font-weight bold
        color #FFF
        text-transform uppercase
        text-align center
        line-height 20px
        transform rotate(45deg)
        -webkit-transform rotate(45deg)
        width 100px
        display block
        background #B31917
        position absolute
        top 19px 
        right: -21px
        &:before
            content ""
            position absolute
            left 0px
            top 100%
            z-index -1
            border-left 3px solid $main
            border-right 3px solid transparent
            border-bottom 3px solid transparent
            border-top 3px solid $main
        &:after 
            content ""
            position absolute 
            right 0px 
            top 100%
            z-index -1
            border-left 3px solid transparent
            border-right 3px solid $main
            border-bottom 3px solid transparent
            border-top 3px solid $main
.tags
    margin-top 1.875rem // 30px
.tg
    font-size 14px
    color $main
    display inline-block
    border 1px solid $main
    border-radius 5px
    padding 4px 10px
    margin-right 2px
    margin-bottom 8px
    text-decoration none
    &:hover
        color darken(rgba(0,95,153,1), 40%)
        border 1px solid darken(rgba(0,95,153,1), 40%)
        background #fff
        
$themes = {
    post-STL: #B31917,
    post-Math: #2DA0C3,
    post-Graph: #D6BA32,
    post-Simulation: #EB7728,
    post-Geometry: #7D669E,
    post-String: #637a91,
    post-Violence: #7AAB13,
    post-Sort: #B31917,
    post-Search: #7D669E,
    post-Other: #637a91,
    post-DP: #D6BA32,
    post-Logic: #7AAB13
}

for $theme, $category-color in $themes
    #{$theme}
        .post-title
            color $category-color !important
        .box-body
            h2
                color $category-color
            .tags a
                color $category-color 
                border 1px solid $category-color
                &:hover
                    color: #fff
                    background: $category-color
        .ribbon .ri
            background-color $category-color
            &:before
                border-left 3px solid darken($category-color, 30%)
                border-top 3px solid darken($category-color, 30%)
            &:after
                border-right 3px solid darken($category-color, 30%)
                border-top 3px solid darken($category-color, 30%)
    .page-number
        color black
        border-color black
    .extend.next
        color black
    .extend.prev
        color black
    .space
        color black